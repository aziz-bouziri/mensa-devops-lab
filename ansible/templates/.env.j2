# Database Configuration
DB_HOST={{ hostvars[groups['databases'][0]]['ansible_default_ipv4']['address'] }}
DB_NAME=mensa
DB_USER=mensa_user
DB_PASSWORD={{ db_password | default('secure_password_123') }}

# Application Configuration
APP_ENV=production
APP_PORT={{ app_port }}
APP_SECRET={{ app_secret | default('your_secret_key_here') }}

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
